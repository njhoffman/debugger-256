{
  "name": "debugger-256",
  "version": "1.6.33",
  "description": "A debugging utility based on 'debug' package that supports extended options and 256 colors",
  "main": "lib/debugger.js",
  "scripts": {
    "lint": "esw lib test",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "test": "NODE_ENV=test mocha",
    "test:mochista": "NODE_ENV=test mochista --reporter spec --opts ./test/mochista.opts",
    "test:watch": "NODE_ENV=test mocha --watch --reporter spec",
    "coverage": "better-npm-run coverage",
    "coverage:watch": "npm run test:mochista -- --watch",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf coverage"
  },
  "betterScripts": {
    "coverage": {
      "command": "./node_modules/.bin/istanbul cover --dir ./coverage --report text --report lcov node_modules/.bin/_mocha -- --opts ./test/mocha.opts --reporter spec",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "bin": {
    "debugger256": "./bin/debugger256"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/njhoffman/debugger-256.git"
  },
  "author": "Nick Hoffman",
  "license": "MIT",
  "keywords": [
    "debug",
    "debugger",
    "log",
    "logger",
    "console",
    "inspect"
  ],
  "dependencies": {
    "app-root-path": "^2.0.1",
    "fs": "0.0.1-security",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "prettyjson-256": "^1.5.15"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "better-npm-run": "^0.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.2.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-watch": "^4.0.2",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^5.2.0",
    "mochista": "^0.17.3",
    "proxyquire": "^2.1.0",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0"
  }
}
